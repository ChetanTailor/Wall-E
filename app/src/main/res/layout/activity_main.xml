<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/materialTextView"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:background="#8AFF85"
        android:gravity="center_vertical"
        android:outlineProvider="none"
        android:paddingLeft="15dp"
        android:text="Wall E"
        android:textColor="#30B7BB"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/outlinedTextField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.textview.MaterialTextView>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextField"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search"
        android:padding="4dp"
        app:boxStrokeColor="@color/black"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1dp"
        app:helperTextTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialTextView">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#131313" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/outlinedButton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elegantTextHeight="true"
        android:gravity="center_vertical"
        android:text="Search"
        app:cornerRadius="100dp"
        app:icon="@android:drawable/ic_menu_search"
        app:layout_constraintBottom_toBottomOf="@+id/outlinedTextField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintStart_toStartOf="@+id/outlinedTextField"
        app:layout_constraintTop_toTopOf="@+id/outlinedTextField"
        app:layout_constraintVertical_bias="0.65" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/csms"
        android:text="Search By Color Palettes : "
        android:textColor="#323232"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outlinedTextField" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:onClick="grayscale"
                android:layout_margin="4dp"
                android:background="@drawable/colorsbackground"
                android:backgroundTint="#909090" />

            <ImageView
                android:onClick="red"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/colorsbackground"
                android:backgroundTint="#FF2626" />

            <ImageView
                android:onClick="orange"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/colorsbackground"
                android:backgroundTint="#FFAC1F" />

            <ImageView
                android:onClick="green"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/colorsbackground"
                android:backgroundTint="#61FF3A" />

            <ImageView
                android:onClick="yellow"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/colorsbackground"
                android:backgroundTint="#F8FF31" />

            <ImageView
                android:onClick="blue"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/colorsbackground"
                android:backgroundTint="#3AFFF8" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/colorsbackground"
                android:backgroundTint="#9800D8"
                android:onClick="lilac" />

            <ImageView
                android:onClick="turquoise"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/colorsbackground"
                android:backgroundTint="#ED73E8" />

            <ImageView
                android:onClick="pink"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/colorsbackground"
                android:backgroundTint="#FF00B2" />

            <ImageView
                android:onClick="white"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/colorsbackground"
                android:backgroundTint="#C6C6C6" />

            <ImageView
                android:onClick="black"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/colorsbackground"
                android:backgroundTint="#000000" />

            <ImageView
                android:onClick="brown"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/colorsbackground"
                android:backgroundTint="#DF6C1F" />

        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />


</androidx.constraintlayout.widget.ConstraintLayout>